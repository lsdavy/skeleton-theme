<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    {% # Inlined CSS Variables %}
    {% render 'css-variables' %}

    {% # Load and preload the critical CSS %}
    {{ 'critical.css' | asset_url | stylesheet_tag: preload: true }}

    {% # Social, title, etc. %}
    {% render 'meta-tags' %}

    <link rel="dns-prefetch" href="https://aero-mock-api.vercel.app">
    <link rel="preconnect" href="https://aero-mock-api.vercel.app">
    <link rel="preload" as="image" href="https://placehold.co/600x400/thistle/grey?text=Item+1">

    {{ content_for_header }}
  </head>

  <body>
    {% sections 'header-group' %}

    {{ content_for_layout }}

    {% sections 'footer-group' %}
  </body>
</html>
